  body

if session.user
  .admin-link-header
    a(href="/blogs/list") Admin Page



.content-block
  nav.navbar.navbar-expand-lg.navbar-light
    a.navbar-brand(href='/') Home
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link.disabled(href='#') Disabled
      form.form-inline.my-2.my-lg-0
        input#search-text.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
        button#search-btn.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
      unless session.user
        a.ml-5.mr-5(href="/users/login") Login
      else
        a.ml-5.mr-5(href="/users/logout") Logout

  block content
  script(type='text/javascript', src = '/scripts/app.js')


