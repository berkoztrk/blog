extends ../layout

block content
  h1= 'Create Blog'
  form(action="/blogs/create", method="post")
    legend
    div.form-group
      label(for="title") Title
      input.form-control(type="text",id="title",name="title")
    
    div.form-group
      label(for="content") Content:
      textarea#content.form-control(name="content", cols="30", rows="10")

    div.form-group
      button.btn.btn-primary(type="submit") Create Blog