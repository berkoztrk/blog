extends ../layout

block content
  h1= 'Edit Blog'
  form(id="blog-form",action="/blogs/edit", method="post")
    legend
    
    div.form-group
      label(for="id") Id
      input.form-control(type="text",id="id",name="id",value = blog.id,readonly)

    div.form-group
      label(for="title") Title
      input.form-control(type="text",id="title",name="title",value = blog.title)
    
    div.form-group
      label(for="summary") Summary:
      textarea.form-control(name="summary", cols="30", rows="10",maxlength=200) #{blog.summary}

    div.blog-editor
      label(for="content") Content:
      textarea(id="content",name="content",style="display:none;")
      .editor !{blog.content}
    
    div
      button.btn.btn-primary.mt-5.mb-5(type="submit") Save Blog


  script(type="text/javascript",src="/scripts/blog/create-edit.js")